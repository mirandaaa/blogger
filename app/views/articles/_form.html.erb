<%= form_for(article, html: {multipart: true}) do |f| %>
<ul>
  <% article.errors.full_messages.each do |error| %>
  <li> <%= error %> </li>
  <% end %>
</ul>
<p>
  <%= f.label :title %> <br />
  <%= f.text_field :title, :size=> '50%x10%' %>
</p>
<p>
  <%= f.label :body %> <br />
  <%= f.text_area :body, :size => '50%x20%' %>
</p>
<p>
  <%= f.label :tags %> (separated by commas) <br />
  <%= f.text_field :tag_list, :size=> '50%x10%' %>
</p>
<p>
  <% if article.image.exists? %>
    <%= image_tag article.image.url(:thumb) %> <br />
  <% end %>
  <%= f.label :image, "Attach an Image" %> <br />
  <%= f.file_field :image %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
